{
  "name": "colinsalmcorner-buildtasks",
  "version": "0.1.1",
  "description": "Custom build tasks for TFS or VSO",
  "scripts": {
    "install-libs-cov-gate": "cd Tasks/CoverageGate && yarn install",
    "install-libs-rep-tokens": "cd Tasks/ReplaceTokens && yarn install",
    "install-libs-ver-asms": "cd Tasks/VersionAssemblies && yarn install",
    "install-libs-tokenizer": "cd Tasks/Tokenizer && yarn install",
    "install-libs-tagBuild": "cd Tasks/TagBuild && yarn install",
    "install-libs-routeTraffic": "cd Tasks/RouteTraffic && yarn install",
    "install-libs": "yarn install-libs-cov-gate && yarn install-libs-rep-tokens && yarn install-libs-ver-asms && yarn install-libs-tokenizer && yarn install-libs-tagBuild && yarn install-libs-routeTraffic",
    "build": "tsc",
    "build-prod": "yarn install-libs && tsc",
    "junittest": "NODE_ENV=test NODE_NO_WARNINGS=1 nyc mocha",
    "test": "yarn build && cross-env NODE_ENV=test NODE_NO_WARNINGS=1 mocha --no-opts test/_testsuite.ts --require ts-node/register --bail --reporter spec",
    "debugtest": "yarn build && cross-env NODE_ENV=debugtest NODE_NO_WARNINGS=1 mocha --no-opts test/_testsuite.ts --require ts-node/register --bail",
    "cover": "yarn build && cross-env yarn junittest",
    "install-vswhere": "curl https://github.com/Microsoft/vswhere/releases/download/1.0.62/vswhere.exe -Lo Tasks/DacPacReport/vswhere.exe",
    "prepextension": "yarn install-vswhere && yarn install-libs && yarn cover"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/colindembovsky/cols-agent-tasks"
  },
  "keywords": [
    "build",
    "tasks",
    "tokens",
    "replace",
    "dacpac",
    "traffic"
  ],
  "author": "Colin Dembovsky (ColinsALMCorner.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/colindembovsky/cols-agent-tasks/issues"
  },
  "homepage": "https://github.com/colindembovsky/cols-agent-tasks",
  "devDependencies": {
    "@types/gulp-mocha": "^0.0.32",
    "@types/mocha": "^5.2.7",
    "@types/mockery": "^1.4.29",
    "@types/node": "^10.9.4",
    "@types/q": "^1.5.2",
    "@types/shelljs": "^0.8.5",
    "assert": "^1.4.1",
    "cross-env": "^5.2.0",
    "minimatch": "^3.0.4",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.23.0",
    "mockery": "^2.1.0",
    "nyc": "^14.1.1",
    "path": "^0.12.7",
    "shelljs": "^0.8.3",
    "source-map-support": "^0.5.12",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.3"
  },
  "main": "index.js",
  "dependencies": {
    "azure-devops-node-api": "^6.5.0",
    "process": "^0.11.10",
    "q": "^1.5.1",
    "azure-pipelines-task-lib": "^2.8.0"
  },
  "nyc": {
    "include": [
      "Tasks/**/*.{js,ts}",
      "test/**/*.{js,ts}"
    ],
    "exclude": [
      "**/fileencoding.{js,ts}",
      "test/**/*.{js,ts}"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text",
      "cobertura",
      "html"
    ],
    "all": true,
    "sourceMap": true,
    "instrument": true,
    "cache": false
  }
}
